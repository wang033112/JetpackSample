<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.jgo.video.view_model.NewsViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/status_bar_margin"
            android:layout_gravity="center_vertical">
        <LinearLayout
            android:id="@+id/fragment_main_home_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_smoke"
            android:orientation="vertical">

            <!-- Today Result -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_10dp"
                android:background="@drawable/layout_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common_10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/common_5dp"
                            android:layout_alignParentStart="true"
                            android:text="@string/live_str" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/common_5dp"
                            android:layout_marginEnd="@dimen/common_5dp"
                            android:layout_marginBottom="@dimen/common_5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/time_str" />

                            <com.jgo.video.ui.view.LivingLine
                                android:layout_width="100dp"
                                android:layout_height="4dp"
                                android:layout_marginTop="@dimen/common_5dp"
                                android:background="@color/light_gray"/>
                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="@dimen/common_10dp"
                                android:src="@drawable/logo_lakers"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/team_lakers"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="90"
                                android:textSize="30sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/common_10dp"
                                android:text="VS"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="89"
                                android:textSize="30sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="@dimen/common_10dp"
                                android:src="@drawable/logo_mavericks"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/team_mavericks"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <!-- Today Result -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_10dp"
                android:background="@drawable/layout_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common_10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/common_5dp"
                            android:layout_alignParentStart="true"
                            android:text="@string/live_str" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/common_5dp"
                            android:layout_marginEnd="@dimen/common_5dp"
                            android:layout_marginBottom="@dimen/common_5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/time_str" />

                            <com.jgo.video.ui.view.LivingLine
                                android:layout_width="100dp"
                                android:layout_height="4dp"
                                android:layout_marginTop="@dimen/common_5dp"
                                android:background="@color/light_gray"/>
                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="@dimen/common_10dp"
                                android:src="@drawable/logo_lakers"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/team_lakers"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="90"
                                android:textSize="30sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/common_10dp"
                                android:text="VS"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="89"
                                android:textSize="30sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="@dimen/common_10dp"
                                android:src="@drawable/logo_mavericks"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/team_mavericks"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <!-- My Favorite players -->
            <FrameLayout
                android:id="@+id/result_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_10dp"
                android:background="@drawable/layout_bg">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <include layout="@layout/item_player" />

                        <include layout="@layout/item_player"/>

                        <include layout="@layout/item_player"/>

                        <include layout="@layout/item_player" />

                        <include layout="@layout/item_player"/>

                        <include layout="@layout/item_player"/>

                        <include layout="@layout/item_player" />

                        <include layout="@layout/item_player"/>

                        <include layout="@layout/item_player"/>

                    </LinearLayout>
                </HorizontalScrollView>
            </FrameLayout>

            <!-- Events -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="@dimen/common_10dp"
                android:background="@drawable/layout_bg"
                app:cardCornerRadius="@dimen/common_10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/team_lakers_player"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/layout_translucent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="@dimen/common_10dp"
                        android:text="@string/news_title_str"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Events -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_10dp"
                android:background="@drawable/layout_bg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_margin="@dimen/common_10dp"
                    android:text="Events"
                    />
            </FrameLayout>
            
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>